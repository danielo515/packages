{
  "name": "danielo-packages",
  "version": "1.0.0",
  "description": "A monorepo for almost all my npm packages",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean",
    "compile": "NODE_ENV=production lerna exec --parallel -- babel src -d dist",
    "build": "lerna run build",
    "cm": "git-cz",
    "commitmsg": "validate-commit-msg",
    "publish": "lerna publish --conventional-commits --message 'chore: Publish'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@babel/cli": "^7.0.0-beta.51",
    "@babel/core": "^7.0.0-beta.51",
    "babel-plugin-macros": "^2.2.2",
    "babel-plugin-pipe-operator-curry": "^1.0.2",
    "lerna": "^2.11.0",
    "param.macro": "^2.1.0-beta.1"
  },
  "repository": {
    "url": "https://github.com/danielo515/packages.git",
    "type": "git"
  },
  "devDependencies": {
    "commitizen": "^2.9.6",
    "cz-lerna-changelog": "^1.2.1",
    "eslint": "^4.19.1",
    "husky": "^0.14.3",
    "validate-commit-msg": "^2.14.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-lerna-changelog"
    }
  }
}
